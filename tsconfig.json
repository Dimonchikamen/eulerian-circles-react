{
    "compilerOptions": {
        "strict": true,
        "outDir": "./build/",

        "noImplicitAny": true,
        "module": "ESNext",

        "target": "es5",
        "jsx": "react-jsx",

        "allowJs": true,
        "moduleResolution": "node",

        "baseUrl": "src",
        "strictNullChecks": false,

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },

    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },

    "include": [
        "src",
        "jest",
        "../jest/jest.config.ts",
        "../jest/jest.setup.ts",
        "../jest"
    ]
}
